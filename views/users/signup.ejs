<% layout("/layouts/boilerplate") %>

<div class="row mt-4">
  <div class="col-6 offset-3">

    <h1>Signup on Airbnb</h1>
    <form action="/signup" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form=label">Enter Username:</label>
        <input
          name="username"
          id="username"
          placeholder="enter title"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>

      </div>

      <div class="mb-3">
        <label for="email" class="form=label">Email:</label>
        <input
          name="email"
          id="email"
          placeholder="enter title"
          type="email"
          class="form-control"
          required
        />
      </div>
      

      <div class="mb-3">
        <label for="password" class="form=label">Enter Password:</label>
        <input
          id="password"
          name="password"
          placeholder="enter title"
          type="text"
          class="form-control"
          required
        />
      </div>

      <button class="btn btn-success mb-6">SignUp</button>
    </form>
  </div>
</div>
